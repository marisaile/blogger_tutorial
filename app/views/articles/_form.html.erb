<div class="article_form">
	<%= form_for(@article, html: {multipart: true}) do |f| %>
		<ul>
		<% @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
		</ul>
			
			<%= f.label :title, class: 'form_label' %><br />
			<%= f.text_field :title, class: 'text_field' %>
			
			
			<br />

			
			<%= f.label :body,  class: 'form_label'  %><br />
			<%= f.text_area :body,  class: 'text_area' %>
			
			
			<br />

			
			<%= f.label :tag_list, class: 'form_label' %><br />
			<%= f.text_field :tag_list,  class: 'text_field'  %>
			
			

			<% if @article.image.exists? %>
				<%= image_tag @article.image.url %><br />
			<% end %>
			
			<%= f.label :image, "Attach a new image" %><br />
			<%= f.file_field :image %>
			
			<%= f.submit :submit, class: 'btn' %>
	<% end %>	
</div>

